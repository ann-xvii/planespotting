<div class="users-control" style="margin-top: 50px; height: 100vh;">

<div class="container">

<h1>Welcome, <%= @user.name %></h1>

<div><%= image_tag @user.image.url(:full) %></div>

<%= @articles.each do |x| %>
	<p><%= x.title %></p>
	<p><%= x.content %></p>
<% end %>



<div><%= link_to "Edit", edit_user_path(@user) %></div>

<br />



<div><%=link_to "Delete", user_path, method: :delete, data: { confirm: "Are you sure you want to destroy this user???"} %></div>
<div><%= link_to "Back", root_path %></div>

</div>
</div>