<div class="users-control index" style="margin-top: 50px;">
<div class="container" style="height: 100vh;">
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<h1 style="text-align: center;">Welcome to the lounge. Make yourself at home.</h1>
<div class="container user-profile-div">
	<div class="row">
			<% @users.each do |user| %>
			<div class="col-md-2 user">
				<p><%= user.name %></p>
				<p><%= image_tag user.image.url(:thumb) %></p>
				<p><%= link_to "View", user_path(user) %></p>
			</div>
		<% end %>
	</div>
</div>


<h3>View and edit your individual profile</h3>

<h6>Write and submit articles</h6>


<%= link_to "New Article", new_article_path %>
<br />
<%= link_to "Articles Index", articles_path %>
<br />
<% if logged_in? %>
	<%= link_to "Profile", current_user %><br />
	<%= link_to "Log Out", logout_path, method: :delete %>
<% else %>
	<%= link_to "Log In", login_path %>
<% end %>
</div>
</div>